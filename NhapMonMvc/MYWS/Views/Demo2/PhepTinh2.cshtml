@model MYWS.Models.SoNguyenModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Demo2: Phep Tinh 2</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="container-fluid">
        <h2>Demo 1: Tính tích 2 số nguyên</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m=>m.SoA, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.SoA, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m=>m.SoA,null,htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SoB, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.SoB, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SoB,null, htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SoC, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.SoC, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SoC,null, htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button style="font-size:24px" type="submit" formaction="@Url.Action("XuLyTinhTong")">
                    <i class="fa fa-plus-square-o">
                    </i>
                </button>
                <input type="submit" value="Tích" class="btn btn-success" formaction="@Url.Action("XuLyTinhTich")" />
            </div>
            <h4 class="text-success">@TempData["KetQua"]</h4>
        }
    </div>
</body>
</html>
