
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tính Tổng</title>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <h2>Demo 1: Tính tổng 2 số nguyên</h2>
        @using(Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("SoA","Số A",htmlAttributes:new {@class= "control-label"})
                @Html.TextBox("SoA",null,htmlAttributes:new {@class= "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("SoB", "Số B", htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("SoB", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <input type="submit" value="Tính" class="btn btn-success"/>
            <h4 class="text-success">@ViewBag.KetQua</h4>
        }
    </div>
</body>
</html>
